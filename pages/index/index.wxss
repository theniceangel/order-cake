/**index.wxss**/

/* banner*/
.banner {
  height: 150px;
  width: 100%;
}
.banner-item {
  height: 100%;
}
.banner-item-image {
  width: 100%;
  height: 100%;
}
/* search*/
.search-section {
  padding: 0 24rpx;
  display: flex;
  margin-top: 24rpx;
}
.search-city {
  margin-right: 3px;
  width: 60px;
  height: 34px;
  line-height: 34px;
  border-radius: 5px;
  background-color: rgb(235,235,235);
  text-align: center;
}
.search-container {
  flex: 1;
  display: flex;
  border-radius: 5px;
}
.search-input-container {
  flex: 1;
  border:1px solid rgb(235,235,235);
  display: flex;
  align-items: center;
}
.search-input {
  height: 22px;
  line-height: 22px;
}
.search-btn {
  padding: 5px;
  border: 1px solid red;
  color: red;
  border-radius: 5px;
  margin-left: 3px;
  display: none;
}